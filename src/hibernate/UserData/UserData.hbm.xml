<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="hibernate.UserData.UserData" table="userdata">
        <id name="uid" column="uid" type="string">
            <generator class="assigned"/>
        </id>
        <property name="gender" column="gender" type="integer"/>
        <property name="age" column="age" type="integer"/>
        <property name="birthday" column="birthday" type="date"/>
        <property name="QQ" column="QQ" type="integer"/>
        <property name="phone" column="phone" type="integer"/>
        <property name="created_at" column="created_at" type="date"/>
        <property name="updated_at" column="updated_at" type="date"/>
    </class>
</hibernate-mapping>